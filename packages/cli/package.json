{
    "name": "@tybalt/cli",
    "version": "0.0.12",
    "description": "A command-line application for getting started with tybalt web components",
    "bin": {
        "tybalt": "dist/index.js"
    },
    "scripts": {
        "build": "yarn run compile && yarn run generate-types",
        "clean": "rimraf dist/",
        "compile": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist",
        "generate-types": "tsc",
        "watch": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist --watch",
        "exec-source": "ts-node-esm src/index.ts",
        "test": "jest"
    },
    "type": "module",
    "keywords": [
        "tybalt",
        "web components"
    ],
    "author": "Douglas Wade <douglas.b.wade@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@chialab/esbuild-plugin-html": "^0.17.2",
        "@swc/core": "^1.3.27",
        "@tybalt/esbuild-plugin": "workspace:^",
        "@types/glob": "^8.0.0",
        "browser-sync": "^2.27.11",
        "chalk": "^5.2.0",
        "commander": "^9.4.1",
        "esbuild": "^0.16.14",
        "eslint": "^8.31.0",
        "glob": "^8.1.0",
        "import-meta-resolve": "^2.2.1",
        "js-convert-case": "^4.2.0",
        "mkdirp": "^1.0.4",
        "rimraf": "^4.1.1",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    },
    "devDependencies": {
        "@types/browser-sync": "^2.26.3",
        "@types/mkdirp": "^1.0.2",
        "@types/node": "^18.11.18",
        "jest": "^29.3.1",
        "ts-node": "^10.9.1"
    },
    "files": [
        "dist/**/*",
        "package.json",
        "README.md"
    ]
}
