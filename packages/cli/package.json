{
    "name": "@tybalt/cli",
    "version": "0.0.18",
    "description": "A command-line application for getting started with tybalt web components",
    "bin": {
        "tybalt": "dist/index.js"
    },
    "scripts": {
        "build": "yarn run compile && yarn run generate-types",
        "clean": "rimraf dist/",
        "compile": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist",
        "generate-types": "tsc",
        "watch": "esbuild src/**/!(*.d).ts --format=esm --outdir=dist --watch",
        "cli": "node dist/index.js",
        "test": "mkdirp out && jest"
    },
    "type": "module",
    "keywords": [
        "tybalt",
        "web components"
    ],
    "author": "Douglas Wade <douglas.b.wade@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@chialab/esbuild-plugin-html": "^0.17.2",
        "@swc/core": "^1.3.27",
        "@tybalt/esbuild-plugin": "workspace:^",
        "@tybalt/eslint-plugin": "workspace:^",
        "@types/glob": "^8.0.1",
        "browser-sync": "^2.27.11",
        "chalk": "^5.2.0",
        "commander": "^11.0.0",
        "esbuild": "^0.16.14",
        "eslint": "^8.46.0",
        "find-up": "^6.3.0",
        "glob": "^10.3.3",
        "import-meta-resolve": "^3.0.0",
        "jest-environment-jsdom": "^29.6.1",
        "js-convert-case": "^4.2.0",
        "mkdirp": "^3.0.1",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    },
    "devDependencies": {
        "@types/browser-sync": "^2.26.3",
        "@types/mkdirp": "^1.0.2",
        "@types/node": "^20.4.4",
        "jest": "^29.4.3",
        "ts-node": "^10.9.1"
    },
    "files": [
        "dist/**/*",
        "config/**/*",
        "package.json",
        "README.md"
    ]
}
